@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Hello, Check out restaurants Below!</h1>

<form method="get">
    <div class=" form-group">
        <div class="input-group">
            <input type="search" asp-for="SearchTerm" class="form-control"/>
            <button class="btn">
                Search
            </button>

        </div>
    </div>
</form>

<table class="table">
    @foreach (var item in Model.restaurants)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Location
            </td>
            <td>
                @item.Cusine
            </td>
            <td>
                <a asp-page="./Details" asp-route-restaurantId="@item.Id">Go to Restaurant</a>
            </td>
        </tr>
    }
</table>

@Model.Message